<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.searchResultFragment">

    <TextView
        android:id="@+id/searchTitleLabel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Search Results for: "
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="50dp"
        />

    <TextView
        android:id="@+id/searchTitle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text=""
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="@id/searchTitleLabel"
        app:layout_constraintLeft_toRightOf="@id/searchTitleLabel"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/searchMovieCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/searchTitleLabel"/>

</androidx.constraintlayout.widget.ConstraintLayout>