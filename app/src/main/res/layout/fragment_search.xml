<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    tools:context=".ui.searchFragment">

    <TextView
        android:id="@+id/search_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Looking for a specific movie?"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/movieTitle"
        android:layout_marginTop="50dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/movieTitle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintTop_toBottomOf="@+id/search_prompt"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/title_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Search by title"/>

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/searchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toBottomOf="@id/movieTitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/genreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Genre"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/searchButton"
        android:layout_marginTop="20dp"/>


    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/genreText"
        app:singleLine="false"
        app:chipSpacingHorizontal="12dp"
        app:singleSelection="false"
        >


        <com.google.android.material.chip.Chip
            android:id="@+id/action"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            app:chipIconEnabled="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/adventure"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adventure"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/animation"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Animation"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/biography"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biography"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/comedy"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comedy"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/crime"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crime"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/drama"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/fantasy"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fantasy"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/filmNoir"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Film-Noir"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/history"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="History"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/music"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Music"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/mystery"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mystery"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/romance"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Romance"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/sciFi"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sci-Fi"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/thriller"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thriller"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/war"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="War"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/western"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Western"
            android:textAlignment="center" />

        <com.google.android.material.chip.Chip
            android:id="@+id/horror"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textAlignment="center" />






























    </com.google.android.material.chip.ChipGroup>


